<div class="container">
	<!-- Employer Dashboard -->
	{{#if isEmployer}}
	<h1>Job Listings</h1>
	<p>Department: {{department}}</p>
	<h2>External</h2>
	<table class="table">
	<thead>
		<tr>
		<th>Listing ID</th>
		<th>Job Title</th>
		<th>Deadline</th>
		<th>Applicants</th>
		</tr>
	</thead>
	<tbody>
		{{#each external}}
		<tr>
			<td>{{listingID}}</td>
			<td>{{jobTitle}}</td>
			<td>{{deadline}}</td>
			<td>{{numApplicants}}</td>
		</tr>
		{{/each}}
	</tbody>
	</table>

	<h2>Internal</h2>
	<table class="table">
	<thead>
		<tr>
		<th>Listing ID</th>
		<th>Job Title</th>
		<th>Deadline</th>
		<th>Applicants</th>
		<th>Link</th>
		</tr>
	</thead>
	<tbody>
		{{#each internal}}
		<tr>
			<td>{{listingID}}</td>
			<td>{{jobTitle}}</td>
			<td>{{deadline}}</td>
			<td>{{numApplicants}}</td>
			<td><a>Link</a></td>
		</tr>
		{{/each}}
	</tbody>
	</table>

	<!-- Applicant Dashboard -->
	{{else}}
	<h1>Applicant Dashboard</h1>
	Hello, {{firstname}}!
	{{/if}}
</div>